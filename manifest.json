{
  "manifest_version": 2,
  "name": "Евро ↔ Лев Калкулатор",
  "version": "1.0",
  "description": "Калкулатор между евро и лева по фиксирания курс на БНБ",
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Евро-Лев Калкулатор",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "permissions": ["storage"],
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  },
  
  "author": "Ivan Trendafilov",
  "homepage_url": "https://evro-lev.free.bg"
}